{
    "description": "Debian 8 - amd64",
    "variables": {
        "name"           : "debian-8-amd64",
        "version"        : "",
        "packer_builder" : "",
        "ansible_user"   : ""
    },
    "builders": [
        {
            "type"                 : "virtualbox-iso",
            "guest_os_type"        : "Debian_64",
            "format"               : "ovf",
            "headless"             : true,
            "iso_urls"             : [
                "http://cdimage.debian.org/debian-cd/8.1.0/amd64/iso-cd/debian-8.1.0-amd64-netinst.iso"
            ],
            "iso_checksum"         : "1a311f9afb68d6365211b13b4342c40b",
            "iso_checksum_type"    : "md5",
            "disk_size"            : 65536,
            "hard_drive_interface" : "sata",
            "ssh_username"         : "root",
            "ssh_password"         : "root",
            "ssh_wait_timeout"     : "30m",
            "shutdown_command"     : "/sbin/shutdown -h now",
            "http_directory"       : "debian-8-amd64",
            "boot_command"         : [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname=debian <wait>",
                "netcfg/get_domain= <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ],
            "vm_name": "{{user `name`}}"
        },
        {
            "type"        : "docker",
            "image"       : "debian:jessie",
            "export_path" : "{{user `name`}}-{{user `version`}}-docker.tar"
        }
    ],
    "provisioners": [
        {
            "type"    : "shell",
            "scripts" : [
                "debian-8-amd64/scripts/apt.sh",
                "debian-8-amd64/scripts/bzip2.sh",
                "debian-8-amd64/scripts/ansible.sh"
            ]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "debian-7-amd64/scripts/openssh-server.sh"
            ],
            "only"    : ["docker"]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "debian-8-amd64/scripts/nfs.sh",
                "debian-8-amd64/scripts/grub.sh",
                "debian-8-amd64/scripts/virtualbox.sh"
            ],
            "only"    : ["virtualbox-iso"]
        },
        {
            "type"            : "ansible-local",
            "playbook_file"   : "debian-8-amd64/ansible/playbook.yml",
            "playbook_dir"    : "debian-8-amd64/ansible",
            "extra_arguments" : ["-e '_user={{user `ansible_user`}} _packer_builder={{user `packer_builder`}}'"]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "debian-8-amd64/scripts/clean-apt.sh"
            ]
        },
        {
            "type"    : "shell",
            "scripts" : [
                "debian-8-amd64/scripts/clean-virtualbox.sh"
            ],
            "only"    : ["virtualbox-iso"]
        }
    ],
    "post-processors": [
        {
            "type"              : "vagrant",
            "output"            : "{{user `name`}}-{{user `version`}}-virtualbox.box",
            "compression_level" : 9
        }
    ]
}
